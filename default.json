{
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(chore)"
  ],
  "branchPrefix": "deps/",
  "baseBranches": [
    "develop"
  ],
  "rangeStrategy": "bump",
  "npm": {
    "commitMessageTopic": "{{prettyDepType}} {{depName}}",
    "commitMessagePrefix": ":arrow_up: chore(deps):"
  },
  "nvm": {
    "enabled": false
  },
  "schedule": [
    "after 2am and before 3am"
  ],
  "ignoreDeps": [
    "node"
  ],
  "packageRules": [
    {
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "matchDepTypes": [
        "dependencies",
        "devDependencies"
      ],
      "automerge": true,
      "automergeSchedule": [
        "after 1am and before 2am"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "matchDepTypes": [
        "dependencies",
        "devDependencies"
      ],
      "automerge": false
    },
    {
      "matchDepTypes": [
        "peerDependencies",
        "engines"
      ],
      "enabled": false
    }
  ]
}
